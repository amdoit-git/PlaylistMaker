<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/main_button_bg</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/main_button_icon_bg</item>
        <item name="android:fontWeight">@dimen/bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SettingsItemCenter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
    </style>

    <style name="SettingsItemCenter_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|start</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/arrow_back_title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">@dimen/normal</item>
    </style>

    <style name="SettingsItemCenter_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:backgroundTint">@color/arrow_back_icon_bg</item>
    </style>

    <style name="SettingsItemCenter_switch">
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsItemBottom">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsItemBottom_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">7.5dp</item>
        <item name="android:backgroundTint">@color/arrow_back_icon_bg</item>
    </style>

    <style name="SettingsItemBottom_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/arrow_back_title</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontWeight">@dimen/normal</item>
    </style>

    <style name="Search_edittext_container">
         <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
    </style>
    <style name="Search_edittext">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_marginVertical">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableStart">@drawable/search_screen_icon</item>
        <item name="android:maxLength">70</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/search_edittext_color</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/search_edittext_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>