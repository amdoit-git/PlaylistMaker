<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsItemCenter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
    </style>

    <style name="SettingsItemCenter_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/arrow_back_title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">@dimen/normal</item>
        <item name="android:layout_marginEnd">55dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SettingsItemCenter_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:backgroundTint">@color/arrow_back_icon_bg</item>
    </style>

    <style name="SettingsItemCenter_switch">
        <item name="android:layout_gravity">center|end</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/settings_screen_bg</item>
        <item name="itemBackground">@color/settings_screen_bg</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Search_edittext_container">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="Search_edittext">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_marginVertical">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableStart">@drawable/search_screen_icon</item>
        <item name="android:maxLength">70</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/search_edittext_color</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/search_edittext_hint</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="track">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="trackCover">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:src">@drawable/track_placeholder</item>
    </style>

    <style name="trackCenter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">66dp</item>
        <item name="android:layout_marginEnd">44dp</item>
    </style>

    <style name="trackName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/trackName</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="artistName_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:layout_marginTop">34dp</item>
    </style>

    <style name="artistName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:layout_marginEnd">77dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/artistName</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="trackTime_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/artistName</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignBottom">@id/artistName</item>
        <item name="android:layout_marginStart">-77dp</item>
    </style>

    <style name="trackTime_dot">
        <item name="android:layout_width">13dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:src">@drawable/track_text_dot</item>
    </style>

    <style name="trackTime">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/trackTime</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginLeft">13dp</item>
    </style>

    <style name="trackRightArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:src">@drawable/track_right_arrow</item>
    </style>

    <style name="themeSwitcher">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">false</item>
        <item name="trackTint">#E6E8EB</item>
        <item name="thumbTint">#AEAFB4</item>
    </style>

    <style name="playerBottomList_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center|start</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="playerBottomList_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center|end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/play_list_text_color_main</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabTextColor">@color/play_list_text_color_main</item>
        <item name="tabSelectedTextColor">@color/play_list_text_color_main</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>