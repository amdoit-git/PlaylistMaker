<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track_item"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/track">

    <ImageView
        android:id="@+id/trackCover"
        style="@style/trackCover" />

    <FrameLayout style="@style/trackCenter">

        <TextView
            android:id="@+id/trackName"
            style="@style/trackName"
            tools:text="Something About The Way You Look Tonight" />

        <FrameLayout style="@style/artistName_group">

            <TextView
                android:id="@+id/artistName"
                style="@style/artistName"
                tools:text="Sir Elton Hercules John" />

            <LinearLayout style="@style/trackTime_group">

                <ImageView style="@style/trackTime_dot" />

                <TextView
                    android:id="@+id/trackTime"
                    style="@style/trackTime"
                    tools:text="05:13" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <ImageView style="@style/trackRightArrow" />

</FrameLayout>