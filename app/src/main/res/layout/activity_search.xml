<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginBottom="@dimen/header_margin_bottom">

        <FrameLayout
            android:id="@+id/button_to_main_screen"
            android:layout_width="@dimen/header_active_width"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <FrameLayout
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_back_bg"
                    android:backgroundTint="@color/arrow_back_icon_bg" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="208dp"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/search"
                    android:textColor="@color/arrow_back_title"
                    android:textSize="@dimen/header_text_size" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <EditText
            android:id="@+id/editText"
            style="@style/Search_edittext"
            android:hint="@string/search_edittext_hint" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/editText_delete"
            android:src="@drawable/delete_edittext"
            android:layout_gravity="center|right"
            android:layout_marginRight="24dp"
            android:visibility="gone"
            />
    </FrameLayout>
</LinearLayout>