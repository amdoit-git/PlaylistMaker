<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootElem"
    android:background="#E6E8EB"
    android:orientation="vertical"
    tools:context=".ui.mediaLibrary.playlists.PlaylistScreenFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playlistInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/backButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:elevation="1dp"
                android:translationZ="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/arrow_back_bg"
                    android:backgroundTint="#1A1B22" />
            </FrameLayout>

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/track_placeholder"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_bold"
                android:gravity="center_vertical"
                android:minHeight="28dp"
                android:singleLine="true"
                android:textColor="#1A1B22"
                android:textFontWeight="700"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cover"
                tools:text="Best songs 2021" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="center_vertical"
                android:minHeight="21dp"
                android:singleLine="true"
                android:textColor="#1A1B22"
                android:textFontWeight="400"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:text="2022" />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="center_vertical"
                android:minHeight="21dp"
                android:singleLine="true"
                android:textColor="#1A1B22"
                android:textFontWeight="400"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                tools:text="300 минут" />

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/track_text_dot"
                android:backgroundTint="#1A1B22"
                app:layout_constraintBottom_toBottomOf="@id/totalTime"
                app:layout_constraintStart_toEndOf="@id/totalTime"
                app:layout_constraintTop_toTopOf="@id/totalTime" />

            <TextView
                android:id="@+id/totalTracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="center_vertical"
                android:minHeight="21dp"
                android:singleLine="true"
                android:textColor="#1A1B22"
                android:textFontWeight="400"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/totalTime"
                app:layout_constraintTop_toBottomOf="@id/description"
                tools:text="98 треков" />

            <View
                android:id="@+id/sharePlaylistIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/share"
                android:backgroundTint="#1A1B22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/totalTime" />

            <View
                android:id="@+id/menuPlaylist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/menu_button_3_dots"
                android:backgroundTint="#1A1B22"
                app:layout_constraintStart_toEndOf="@id/sharePlaylistIcon"
                app:layout_constraintTop_toTopOf="@id/sharePlaylistIcon" />

            <View
                android:id="@+id/spaceExpander"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f00"
                android:layout_marginTop="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/menuPlaylist" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/playlist_tracks_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:filterTouchesWhenObscured="true"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        android:visibility="invisible"
        app:behavior_hideable="false"
        app:behavior_peekHeight="505dp"
        app:layout_behavior="com.example.playlistmaker.ui.common.LockableBottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_menu_dash" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:id="@+id/no_tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/no_tracks_found" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ys_display_medium"
                android:text="@string/playlist_no_tracks"
                android:textAlignment="center"
                android:textColor="@color/play_list_text_color_black"
                android:textSize="19sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#1A1B22"
        android:elevation="2dp"
        android:translationZ="2dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/menu_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:elevation="3dp"
        android:orientation="vertical"
        android:translationZ="3dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="383dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_menu_dash" />

        <include
            android:id="@+id/playlistInMenu"
            layout="@layout/playlist_in_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/shareButton"
            style="@style/PlaylistMenuButton"
            android:text="@string/playlist_menu_share" />

        <TextView
            android:id="@+id/editButton"
            style="@style/PlaylistMenuButton"
            android:text="@string/playlist_menu_edit" />

        <TextView
            android:id="@+id/deleteButton"
            style="@style/PlaylistMenuButton"
            android:text="@string/playlist_menu_delete_playlist" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>